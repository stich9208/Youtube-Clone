mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls   
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
                span
                    span#currentTime 00:00:00  
                    |/ 
                    span#totalTime 00:00:00
            .videoPlayer__column   
                .volume
                    span#jsVolumeBtn
                        i.fas.fa-volume-up
                    input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.05", value="1")
                span#jsFullScreen
                    i.fas.fa-expand